{
    "compilerOptions": {
      "target": "esnext",
      "jsx": "preserve",
      "lib": ["esnext", "dom"],
      "useDefineForClassFields": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "types": ["vite/client"],
      "strict": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "baseUrl": "./",
      "paths": {
        "@views/*": ["./views/*"],
        "@utils/*": ["../lib/utils/*"],
        "@lib/*": ["../lib/*"],
        "@file-download/*": ["../lib/file-download/*"]
      }
    },
    "include": ["./**/*.ts", "./**/*.d.ts", "./**/*.tsx", "./**/*.vue"]
  }